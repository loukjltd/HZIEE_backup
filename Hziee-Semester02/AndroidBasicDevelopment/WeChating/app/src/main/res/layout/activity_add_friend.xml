<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLighterGray"
    android:orientation="vertical"
    tools:context=".AddFriendPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:text="添加朋友 "
        android:textColor="@color/black"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etAddFriend"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="30dp"
            android:background="@color/colorLightGray"
            android:gravity="center"
            android:hint="请输入用户名"
            android:inputType="text"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:text="搜索" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_friend_page"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:background="@color/colorLightGray"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivNewFriendAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/mello" />

        <TextView
            android:id="@+id/tvNewFriendName"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:text="旅客君"
            android:textColor="#336598"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnAddNewFriend"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center|right"
            android:text="添加" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_friend_page2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:background="@drawable/notfound" />

    </LinearLayout>

</LinearLayout>